{
  "apps" : [
    {
      "name"      : "<%= props.applicationName %>",
      "script"    : "server/server.js",
      "env": {
        "COMMON_VARIABLE": "true"
      },
      "env_production" : {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy" : {
    "production" : {
      "user" : "SERVER_HOST_USERNAME",
      "host" : "SERVER_HOST_IP_ADDRESS",
      "ref"  : "origin/master",
      "repo" : "git@github.com:kishors/BZRReleaseBck.git",
      "path" : "/var/www/production",
      "post-deploy" : "git submodule update --init --recursive; npm install; pm2 startOrRestart ecosystem.json --env production"
    }
  }
}
