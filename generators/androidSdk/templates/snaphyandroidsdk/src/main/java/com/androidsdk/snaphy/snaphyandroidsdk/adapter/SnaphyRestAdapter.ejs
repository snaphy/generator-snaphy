package com.androidsdk.snaphy.snaphyandroidsdk.adapter;

import android.content.Context;

import com.strongloop.android.loopback.RestAdapter;

/**
 * Created by robinskumargupta on 07/02/18.
 */

public class SnaphyRestAdapter extends com.strongloop.android.loopback.RestAdapter {
    public static final int TIMEOUT = 300000;


    public void setTimeout(int timeoutMillis) {
        getClient().setTimeout(timeoutMillis);
    }


    public SnaphyRestAdapter(Context context, String url) {
        super(context, url);
        setTimeout(TIMEOUT); // Default to the desired timeout
    }
}
